#!/bin/bash

source ./arch/functions.sh

while true; do

    echo 
    echo "  Compiler options available: "
    echo "  [1] - gnu compiler"
    echo "  [2] - intel compiler"
    echo
    read -p "  Choose option: " opt
    echo
    
    case $opt in
       "1")
          echo "  gnu compiler selected."
          build_config gnu
          break
          ;;
      "2")
          echo "  intel compiler selected."
          build_config intel
          break
          ;;
      *)
         echo "ERROR: Option $opt not valid. Try again..."
         echo   
     ;;
    esac
done

ROOT_DIR=`pwd`
cat << EOF > docker-compose.yml
version: "3.9"
   
services:

  main:
    image: intel/oneapi-hpckit:1.0
    container_name: intel-gnu
    ports:
      - "7777:9000"
    volumes:
      - "${ROOT_DIR}:/home/container"
    command: bash -c 'echo "source /etc/profile.d/lmod.sh" > .bashrc && echo "module load $COMP_NAME" >> .bashrc && tail -f /dev/null'

EOF

echo